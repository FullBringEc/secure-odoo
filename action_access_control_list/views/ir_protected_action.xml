<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ir_protected_action_form" model="ir.ui.view">
        <field name="name">ir.protected.action.tree</field>
        <field name="model">ir.protected.action</field>
        <field name="arch" type="xml">
            <form string="Protected Action">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <field name="technical_name"/>
                        <field name="model_id"/>
                        <field name="model_technical_name"/>
                        <field name="active"/>
                        <field name="error_message"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ir_protected_action_list" model="ir.ui.view">
        <field name="name">ir.protected.action.tree</field>
        <field name="model">ir.protected.action</field>
        <field name="arch" type="xml">
            <tree string="Protected Actions">
                <field name="name"/>
                <field name="technical_name"/>
                <field name="model_id"/>
                <field name="model_technical_name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="ir_protected_action_action" model="ir.actions.act_window">
        <field name="name">Protected Action</field>
        <field name="type">ir.protected.action.act_window</field>
        <field name="res_model">ir.protected.action</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>

    <act_window id="ir_protected_action_action" name="Protected Action" res_model="ir.protected.action"/>

</odoo>
